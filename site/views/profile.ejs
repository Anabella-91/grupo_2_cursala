<!DOCTYPE html>
<html>
        <%- include('./partials/head'); %>
    <body>
        <%- include('./partials/header'); %>

        <div class="contenedor b-gris">
            <div class="b-blanco shadow1 profile-contenedor border-r">
        
                <div class="user-data">
                    <h1>Hola <%= user.name %>!</h1>
                <p class="campo-perfil">Nombre:</p><p class="dato-usuario"><%= user.name %></p>
                <p class="campo-perfil">Email:</p><p class="dato-usuario"><%= user.email %></p>
                <img id="img-preview" src="<%= '/images/users/' + user.imagen %>" alt="imagen-perfil">
                <div>
                    <form action="/users/perfil" method="POST" enctype="multipart/form-data">
                        <input id="img-upload" type="file" class="register-image c-ATransparente" name="image">
                        <button class="boton-editar border-r">Guardar</button>
                    </form>
                </div>
                <form action="/users/logout" method="POST">
                    <button class="boton-editar border-r">Cerrar sesion</button>
                </form>
                </div>
            
            </div>
        </div>
    </body>
</html>