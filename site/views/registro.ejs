<!DOCTYPE html>
<html>
  <%- include('./partials/head'); %>
<body>
  <div class="container-formRegister b-register">
    <div class="register-container b-blanco shadow1">
      <div class="register">
        <div class="circle-logo b-register">
          <img src="/images/logo.png" alt="Logo-Cursala">
        </div>
        <h2 class="c-celeste">No tengo cuenta</h2>
        <div class="errores"><ul></ul></div>
        <form class="registro" action="/users/registro" method="POST" enctype="multipart/form-data">
          <input class="nombre" type="text" name="nombre" placeholder="Nombre">

          <div><%= errors.email ? errors.email.msg: '' %></div>
          <input type="email" name="email" placeholder="Email" value="<%= body.email ? body.email : ''%>">

          <input class="contrase単a" type="password" name="password" placeholder="Contrase単a">

          <input class="contrase単aB" type="password" name="password2" placeholder="Confirma contrase単a">

          <p class="c-ATransparente">Foto de perfil</p>
          <div><%= errors.imagen ? errors.imagen.msg: '' %></div>
          <input class="register-image c-ATransparente" type="file" name="imagen">

          <input type="submit" name="submit" class="submit register-button" value="REGISTRARME">
        </form>
      </div>
      <div class="login b-celeste">
        <h2 class="c-blanco">Ya tengo cuenta</h2>
        <div class="login-items">
          <a class="login-btn" href="/users/login"><button class="correo"><i class="fas fa-envelope"></i> Acceder con Correo</button></a>
          <a class="fb-btn" href="#"><img class="register_media" src="/images/registro_facebook.png" alt="registro twitter"></a>
          <a class="tw-btn" href="#"><img class="register_media" src="/images/registro_twitter.png"></a>
        </div>
      </div>
    </div>
  </div>
  <script src="/javascripts/registro.js" type="text/javascript"></script>
</body>
</html>