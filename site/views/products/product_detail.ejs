<!DOCTYPE html>
<html>
<head>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
  <h1><%= products.id %></h1>
  <form action="/products/<%= products.id %>?_method=PUT" method="POST">
    <label for="nombre">Nombre del curso</label>
    <input type="text" name="nombre" placeholder="Nombre del curso" value="<%= products.nombre %>">
    <textarea name="descripcion" id="descripcion" cols="30" rows="4" value="<%= products.descripcion %>"></textarea>
    
    <label for="categoria">Categoria</label>
    <select name="opciones" id="opciones">
      <option value="a">Opcion A</option>
      <option value="b">Opcion B</option>
      <option value="c">Opcion C</option>
    </select>
    
    <label for="horas">Cantidad de horas</label>
    <input type="text" name="horas" placeholder="Hs del curso" value="<%= products.horas %>">
    
    <label for="apuntes">Apuntes disponibles</label>
    <input type="text" name="apuntes" placeholder="Apuntes disponibles" value="<%= products.apuntes %>">
    
    <label for="apuntes">Cantidad de ejercicios</label>
    <input type="text" name="ejercicios" placeholder="Cantidad ejercicios" value="<%= products.ejercicios %>">
    
    <label for="number">Precio</label>
    <input type="text" name="precio" placeholder="Precio" value="<%= products.precio %>">
    <input type="submit" name="delete" value="ELIMINAR">
    <input type="submit" name="guardar" value="GUARDAR">

  </form>
  
</body>
</html>
