<!DOCTYPE html>
<html>
    <%- include('./partials/head') %>
    <body>
    <%- include('./partials/header') %>
    <main>
    <div class="container b-gris">
        <div class="contenedor-comprados shadow1 border-r b-blanco">
            <h1 class="titulo-carrito c-azul">Productos</h1>
            <% for (let i = 0; i < productos.length; i++) { %>
                <ul class="detalle-comprado">
                <li class="titulo-comprado b-rosa"><span class="curso-comprado"><%= productos[i].curso.name %></span></li>
                <div class="comprado-info">
                <li class="categoria-compra c-celeste">Categoria</li>
                <li class="precio-compra"><%= productos[i].curso.precio %></li>
                </div>
                <li>
                    <form action="/products/eliminarproducto" method="POST">
                        <button type="submit"><img src="/images/trash.svg" alt="boton eliminar"><button>
                        <input class="none" type="number" value="<%= productos[i].id_producto %>" name="producto_id">
                    </form>
                </li>
                </ul>
             <% } %>
             
        <div class="monto-total">
        <p class="total c-ATransparente">Total</p>
        <p class="cantidad-total c-azul">
            <% let total = 0; %>
            <% for(let j = 0; j < productos.length; j++) { %>
                <% total = total + productos[j].curso.precio; %>
            <% } %>
            <%= total %>
        </p>
        </div>
        </div>
    <div class="detalle-pago shadow1 b-blanco border-r">
        <h2 class="titulo-carrito titulo-pago c-azul">Detalle del pago</h2>
        <div class="contenedor-pago">
            <form class="form-pago" action="/users/carrito" method="POST">
                <script
                src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="pk_test_51HA5JWAQkSZ0OTSUW5doH9eHyQOefjURhoH1TEy9SI4JBSPMpWlzwTW8WMdLEma4Ixj9gYpvnjAvFHPaG9yVOV3t001z2uBeo9"
                data-amount="300"
                data-name="Store Online"
                data-description="Pagos con Stripe"
                data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                data-locale="auto">
                </script>

                <label class="c-azul">Nombre del titular</label>
                <input class="input-carrito input-largo" type="text" name="titule">
                <label class="c-azul">Numero de la tarjeta</label>
                <input class="input-carrito input-largo" type="number" name="numero_tarjeta" placeholder="XXXX XXXX XXXX XXXX">
            <div>  
                <label class="campo-vencimiento c-azul">Fecha vencimiento</label>
                <label class="campo-seguridad c-azul">Codigo seguridad</label>
                <input class="input-carrito input-corto" placeholder="MM/YY" type="number" name="vencimiento">
                <input class="input-carrito input-corto border-r" placeholder="XXXX" type="number" name="codigo_seguridad">
            </div>
                <button class="boton-pago border-r c-blanco b-celeste" type="submit">Realizar pago</button>
            </form>
        </div>
    </div>
    </div>
    </main>
    </body>
</html>